{
  "name": "gitlab-copilot",
  "version": "2.0.0",
  "description": "GitLab MR code review using GitHub Copilot SDK on GitLab CI",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node24 --outfile=dist/index.mjs --format=esm --external:@github/copilot-sdk",
    "build:server": "esbuild src/server.ts --bundle --platform=node --target=node24 --outfile=dist/server.mjs --format=esm",
    "build:all": "npm run build && npm run build:server",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "gitlab",
    "copilot",
    "code-review",
    "ci"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23"
  }
}
